<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="@dimen/browser_actions_context_menu_min_padding"
    android:weightSum="4"
    tools:context=".ClickExistActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/imgPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:src="@drawable/common_google_signin_btn_icon_disabled" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtPlaceName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.7"
        android:gravity="fill_vertical"
        android:hint="Place"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3"
        android:gravity="fill_vertical"
        android:hint="Place"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_weight="1"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="2.5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:stepSize="0.1" />

        <TextView
            android:id="@+id/txtTotalComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="totalCommments"
            android:textColor="@color/design_default_color_primary_dark"
            android:textColorLink="@color/darkGrey"
            android:textSize="18sp" />
    </FrameLayout>


</LinearLayout>